<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:weightSum="10"
        android:background="@drawable/vien_item"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <TextView
            android:textSize="15sp"
            android:id="@+id/tvtengh"
            android:maxLines="3"
            android:textColor="#000000"
            android:layout_weight="6"
            android:text="Trà sữa trân châu đường đen"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_gravity="right"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginRight="5dp"
                android:gravity="right"
                android:textSize="15sp"
                android:id="@+id/tvgiagh"
                android:layout_marginBottom="10dp"
                android:textColor="#000000"
                android:text="25.000đ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginRight="5dp"
                android:layout_marginBottom="2dp"
                android:gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="bottom|right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:background="@drawable/ic_remove_red_24dp"
                        android:id="@+id/btntrugh"
                        android:layout_width="25dp"
                        android:layout_height="25dp"></Button>
                    <TextView
                        android:id="@+id/tvslgh"
                        android:layout_marginRight="7dp"
                        android:layout_marginLeft="7dp"
                        android:textColor="#000000"
                        android:text="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/btnconggh"
                        android:background="@drawable/ic_add_red_24dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"></Button>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tvxoa"
            android:gravity="center"
            android:text="Xóa"
            android:textColor="#EDFCFAFA"
            android:background="#F3F51414"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>